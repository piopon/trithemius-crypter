<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Text text="Image file" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="fieldImageFile" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="..." fx:id="buttonImageFile" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Text text="Text file" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="fieldTextFile" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="..." fx:id="buttonTextFile" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Text text="Output directory" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="fieldOutPath" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Button text="..." fx:id="buttonOutPath" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>